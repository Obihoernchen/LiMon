memcached:
 image: schabrolles/memcached_ppc64le
 name: memcached
 hostname: memcached

graphite:
 image: schabrolles/graphite_ppc64le
 name: graphite
 hostname: graphite
 volumes:
  - /var/lib/graphite/storage/whisper:/opt/graphite/storage/whisper
 ports:
  - "2003:2003"
 links:
  - memcached:memcached

influxdb:
 image: docker.io/schabrolles/influxdb_ppc64le:0.13.0
 name: influxdb
 hostname: influxdb
 volumes:
  - /var/lib/influxdb:/var/lib/influxdb
 ports:
  - "8083:8083"
  - "8086:8086"
 command: influxd -config /var/lib/influxdb/influxdb.conf

grafana3:
 image: schabrolles/grafana3_ppc64le:3.1.1
 name: grafana3
 hostname: grafana3
 volumes:
  - /var/lib/grafana:/var/lib/grafana
 links:
  - graphite:graphite
  - memcached:memcached
  - influxdb:influxdb
 ports:
  - "80:80"

statsd:
 image: schabrolles/statsd_ppc64le
 name: statsd
 hostname: statsd
 links:
  - graphite:graphite
 ports:
  - "8125:8125/udp"
  - "8126:8126"

